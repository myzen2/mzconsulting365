<!-- app/views/pages/contact_success.html.erb -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 text-center">
      <div class="mb-4">
        <svg class="bi bi-check-circle-fill text-success" width="4em" height="4em" viewBox="0 0 16 16" fill="currentColor">
          <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </svg>
      </div>

      <div class="card shadow">
        <div class="card-body">
          <h1 class="card-title mb-4">Merci pour votre message !</h1>
          <p class="card-text">
            Votre demande a bien été reçue. Nous vous répondrons dans les plus brefs délais.
          </p>
          <p class="card-text">
            En attendant, n'hésitez pas à consulter nos <%= link_to "services", services_path, class: "text-primary" %>.
          </p>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to "Retour à l'accueil", root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
